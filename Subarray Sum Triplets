import java.util.*;
class Main {
    public static int SubArraySumTriplets(int arr[], int n)
    {
        int count = 0;
        for(int i=0;i<n-2;i++)
        {
            if (arr[i] + arr[i+2] == arr[i+1])
            {
                count++;
            }
        }
        return count;
    }
    
    public static void main(String[] args) {
      int n = 8;
      int arr[] = {1, 2, 1, 3, 5, 2, 4, 2};
      int ans = SubArraySumTriplets(arr, n);
      System.out.println(ans);
    }
}
